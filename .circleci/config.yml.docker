    docker:
      - image: ubuntu:20.04
    steps:
      - run:
          name: The First Step
          command: |
            echo 'Hello World!'
            echo 'This is the delivery pipeline'
            cat /proc/version
            uname -r
            whoami
            cat /
            cat /proc/sys/kernel/unprivileged_bpf_disabled 
            sysctl -w kernel.unprivileged_bpf_disabled=0